extends layout

block main
  form(action="/users/create" method="post")
    dt
      dl
        label(for="username") Enter username
      dd
        input(type="text"
              name="username"
              placeholder="any name here")

      dl
        label(for="password") Enter a password
      dd
        input(type="text"
              name="password"
              placeholder="asfahj.jJjag!kjR")

    fieldset
      input(type="submit" value="Create account")
