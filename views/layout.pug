doctype html

html(lang="en-US")

  head
    title Macronutrient Logger
    meta(charset="utf-8")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans")
    link(rel="stylesheet" href="/stylesheets/whitespace-reset.css")
    link(rel="stylesheet" href="/stylesheets/application.css")

  body
    header
      h1 Macro Tracker
      block headerLinks

    main
      - let kinds = Object.keys(flash || {});
      if kinds.length > 0
        ul
          each kind in kinds
            each message in flash[kind]
              li.flash(class=kind)= message

      block main

    footer
      p 
        a(href="/favorite-elements") See top nutrient dense foods
      p 
        a(href="/dashboard") Go to dashboard


      block signIn
        form(action="/users/signout" method="post")
          fieldset
            p Signed in as #{username}
            button Sign Out